<Page x:Class="Projekt.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:h="http://helix-toolkit.org/wpf"
      xmlns:local="clr-namespace:Projekt"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About" Background="Blue">
    <StackPanel  Height="418" Width="700" Background="LightGray">
        <Border BorderBrush="DimGray" BorderThickness="1" Margin="3" Padding="5 5 60 5">
            <Grid Background="LightGray" Height="400" Width="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <h:HelixViewport3D Grid.Row="0">
                <h:DefaultLights/>
                <h:Teapot/>
            </h:HelixViewport3D>
            <Button Grid.Row="1" HorizontalAlignment="Center" Margin="0 10 0 10" Click="Back">&lt;Cofnij&gt;</Button>
            <Button Grid.Row="2" HorizontalAlignment="Center" Margin="0 10 0 10" Click="Frog">&lt;Żaba&gt;</Button>
        </Grid>
        </Border>

    </StackPanel>
</Page>
